.img {
  width: 56rpx;
  height: 56rpx;
}

.calendar {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  z-index: 100;
}

.calendar>.bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 101;
}

.content {
  position: absolute;
  left: 0;
  top: 0;
  margin: 20vh 32rpx;
  width: 686rpx;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  z-index: 102;
}

.content>.top {
  padding: 24rpx 32rpx;
  background-color: #F3981C;
  color: #fff;
  font-size: 28rpx;
}

.content>.top>.label {
  margin-top: 6rpx;
  font-size: 36rpx;
}

.content>.top>.label>span {
  margin-right: 20rpx;
}

.content>.bottom {
  background-color: #fff;
  padding-bottom: 30rpx;
}

.content>.bottom>.up {
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 36rpx;
  font-weight: 400;
  color: #666666;
  padding: 0 40rpx;
}

.content>.bottom>.up>.img {
  width: 60rpx;
  height: 60rpx;
}

.content>.bottom>.box {
  padding: 0 40rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.content>.bottom>.box>view {
  width: 14%;
  line-height: 40rpx;
  text-align: center;
  margin-bottom: 24rpx;
  position: relative;
}

.content>.bottom>.box>view>.now {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  border-radius: 50%;
  background: #faebd5;
}

.content>.bottom>.box>view>.checkout {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  border-radius: 50%;
  background: #F3981C;
  color: #fff;
}

.content>.bottom>.box>view>.has {
  position: absolute;
  right: 4rpx;
  top: 0;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #FF3333;
}
