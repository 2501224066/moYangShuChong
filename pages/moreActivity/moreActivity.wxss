page {
  background: #EDEDED;
}

.more-activity {
  padding-bottom: 34rpx;
}

.list {
  padding: 0 32rpx;
}

.list>.item>.time {
  text-align: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  margin: 48rpx 0 32rpx 0;
}

.list>.item>.box {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  background: #fff;
  box-shadow: 0rpx 8rpx 20rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  padding: 32rpx;
}

.list>.item>.box>.img {
  width: 168rpx;
  height: 168rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
}

.list>.item>.box>.right {
  flex: 1;
}

.list>.item>.box>.right>.title {
  font-size: 32rpx;
  margin: 0 20rpx;
  font-weight: 500;
  color: #333333;
}

.list>.item>.box>.btn {
  width: 140rpx;
  text-align: center;
  height: 64rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 64rpx;
}

.list>.item>.box>.btn1 {
  border: 1rpx solid #F3981C;
  color: #F3981C;
}

.list>.item>.box>.btn2 {
  background: #F5F5F5;
  color: #CCCCCC;
}

.list>.item>.box>.btn3 {
  background: #F5F5F5;
  color: #333333;
}

.list>.item>.bottom>.btn5 {
  width: 88%;
  background: #F05B63;
  color: #fff;
}

.none {
  margin-top: 10vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.none>.img {
  width: 270rpx;
  height: 292rpx;
}
