.result {
  padding: 0 32rpx;
}

.form {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.form>.left {
  flex: 1;
  height: 84rpx;
  background: #F5F5F5;
  border-radius: 40px;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}

.form>.left>.img {
  width: 48rpx;
  height: 48rpx;
}

.form>.left>input {
  flex: 1;
  font-size: 32rpx;
  color: #666;
  margin: 0 20rpx;
}

.form>.left .placeholder {
  color: #CCCCCC;
}

.form>.sub {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #F3981C;
  width: 100rpx;
  text-align: center;
}

.list>.item {
  display: flex;
  margin: 36rpx 0 12rpx 0;
}

.list>.item>.img {
  width: 126rpx;
  height: 168rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.list>.item>.content {
  flex: 1;
  padding-left: 20rpx;
}

.list>.item>.content>.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 4rpx 0 16rpx 0;
}

.list>.item>.content>.memo {
  font-size: 24rpx;
  line-height: 37rpx;
  font-weight: 400;
  color: #666666;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.more {
  border-top: 1rpx solid #E5E5E5;
  margin: 34rpx -32rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
}

.none {
  margin-top: 20vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.none>.img {
  width: 270rpx;
  height: 292rpx;
}
