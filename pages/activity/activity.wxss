page {
  background: #F7F9FC;
}

.top {
  padding: 30rpx 32rpx 60rpx 32rpx;
  background: #F3981C;
  color: #fff;
}

.top>.card {
  width: 686rpx;
  height: 174rpx;
  background: rgba(255, 255, 255, 0.1);
  box-shadow: 0rpx 12rpx 20rpx 0rpx rgba(243, 140, 0, 1), inset 4rpx 2rpx 14rpx 0rpx rgba(255, 255, 255, 0.23);
  border-radius: 32rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  filter: blur(0rpx);
}

.top>.card>.num {
  display: flex;
  align-items: center;
  padding: 44rpx 0;
}

.top>.card>.num>view:nth-child(1) {
  border-right: 1rpx solid rgba(255, 255, 255, 0.3);
}

.top>.card>.num>view {
  padding: 0 44rpx;
  width: 50%;
  display: flex;
  align-items: center;
}

.top>.card>.num>view>.img {
  width: 88rpx;
  height: 88rpx;
  margin-right: 20rpx;
}

.top>.card>.num>view .count {
  font-size: 36rpx;
}

.top>.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 70rpx;
}

.top>.title>.history {
  font-size: 36rpx;
}

.top>.title>view {
  display: flex;
  align-items: center;
}

.top>.title>view>.img {
  width: 30rpx;
  height: 30rpx;
}

.week {
  margin-top: -32rpx;
  background: #e9a54c;
  color: #fff;
  font-size: 28rpx;
  line-height: 30rpx;
  padding: 24rpx 40rpx 56rpx 40rpx;
  border-radius: 32rpx 32rpx 0 0;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.week>.num {
  width: 14%;
  padding: 20rpx 0;
  border-radius: 16rpx;
}

.week>.num>view {
  height: 35rpx;
  line-height: 35rpx;
}

.week>.today {
  background: rgba(250, 250, 250, .2);
}

.week>.active {
  background: #fff;
  color: #F3981C;
}

.content {
  flex: 1;
  margin-top: -32rpx;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx 32rpx 50rpx 32rpx;
  background: #F7F9FC;
}

.list>.item {
  margin-bottom: 32rpx;
  background: #fff;
  box-shadow: 0rpx 8rpx 20rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  padding: 32rpx;
}

.list>.item>.up {
  display: flex;
  justify-content: space-between;
}

.list>.item>.up>.img {
  width: 168rpx;
  height: 168rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
}

.list>.item>.up>.right {
  box-sizing: border-box;
  font-size: 32rpx;
}

.list>.item>.up>.right>view {
  margin-bottom: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 480rpx;
}

.list>.item>.up>.right span {
  margin: 0 20rpx;
  font-weight: 500;
  color: #333333;
}

.list>.item>.up>.right>.li {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list>.item>.up>.right>.li>.line {
  flex: 1;
  margin-right: 20rpx;
  height: 16rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  position: relative;
}

.list>.item>.up>.right>.li>.line>.has {
  position: absolute;
  height: 16rpx;
  background: linear-gradient(270deg, #FAC93C 0%, #F3981C 100%);
  border-radius: 8rpx;
}

.list>.item>.bottom {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.list>.item>.bottom>.btn {
  margin-top: 20rpx;
  width: 210rpx;
  text-align: center;
  height: 64rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 64rpx;
}

.list>.item>.bottom>.btn1 {
  border: 1rpx solid #F3981C;
  color: #F3981C;
}

.list>.item>.bottom>.btn2 {
  border: 1px solid #CCCCCC;
  color: #333333;
}

.list>.item>.bottom>.btn3 {
  width: 88%;
  background: #F5F5F5;
  color: #CCCCCC;
}

.list>.item>.bottom>.btn4 {
  width: 88%;
  background: #F3981C;
  color: #fff;
}

.list>.item>.bottom>.btn5 {
  width: 88%;
  background: #F05B63;
  color: #fff;
}

.list>.item>.bottom>.btn6 {
  background: #F05B63;
  color: #fff;
}

.none {
  margin-top: 10vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.none>.img {
  width: 270rpx;
  height: 292rpx;
}
