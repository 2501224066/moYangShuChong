.top {
  background: linear-gradient(180deg, #F3981C 0%, rgba(242, 152, 29, 0) 100%);
  padding-bottom: 62rpx;
}

.top>.search {
  height: 90rpx;
  background: #f0c486;
  border-radius: 45rpx;
  margin: 32rpx 30rpx;
  display: flex;
  align-items: center;
}

.top>.search>.img {
  width: 36rpx;
  height: 38rpx;
  margin: 0 20rpx 0 32rpx;
}

.top>.search>.input {
  flex: 1;
  color: #fff;
  font-size: 34rpx;
}

.top>.banner {
  margin: 0 32rpx;
  overflow: hidden;
  border-radius: 32rpx;
  overflow: hidden;
  transform: translateY(0);
}

.top>.banner swiper {
  height: 320rpx;
}

.icon {
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  color: #666;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.icon>.item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 46rpx;
}

.icon>.item>.img {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.title {
  padding: 0 48rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #333333;
  display: flex;
  align-items: center;
}

.title>.img {
  width: 48rpx;
  height: 44rpx;
  margin-right: 4rpx;
}

.card {
  display: flex;
  overflow-x: auto;
  align-items: center;
  padding: 24rpx 10rpx 50rpx 10rpx;
}

.card>.item {
  width: 580rpx;
  height: 350rpx;
  box-shadow: 0px 8px 20px 0px rgba(0, 0, 0, 0.05);
  border-radius: 32rpx;
  padding: 32rpx;
  box-sizing: border-box;
  color: #999;
  flex-shrink: 0;
  margin-left: 24rpx;
}

.card>.after {
  width: 20rpx;
  height: 350rpx;
  flex-shrink: 0;
}

.card>.item>.header {
  display: flex;
  align-items: center;
}

.card>.item>.header>.img {
  width: 168rpx;
  height: 168rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background: #fff;
}

.card>.item>.header .name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card>.item>.content {
  height: 120rpx;
  margin-top: 16rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
