
.container {
  overflow: auto;
}

.container>.title {
  padding: 0 32rpx;
  margin-top: 50rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.container>.title>.img {
  width: 48rpx;
  height: 48rpx;
  margin-right: 14rpx;
}

.container>.title span {
  font-size: 26rpx;
  color: #999;
  margin-left: 10rpx;
}

.container>.list {
  flex: 1;
  overflow: auto;
  padding: 26rpx 50rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #243241;
}

.container>.list>.item {
  display: flex;
  align-items: center;
  line-height: 100rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.container>.list>.item>.name {
  margin-left: 20rpx;
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.active {
  color: #F3981C !important;
}

.container>.box {
  padding: 50rpx 32rpx
}

.container video {
  width: 686rpx;
  height: 386rpx;
  box-shadow: 0rpx 6rpx 20rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.none {
  margin-top: 10vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.none>.img {
  width: 270rpx;
  height: 292rpx;
}

.audios {
  position: fixed;
  right: 32rpx;
  bottom: 10vh;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #fff;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 8rpx 20rpx 0rpx rgba(0, 0, 0, 0.3);
}
