.search {
  padding: 0 32rpx;
}

.form {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.form>.left {
  flex: 1;
  height: 84rpx;
  background: #F5F5F5;
  border-radius: 40px;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}

.form>.left>.img {
  width: 36rpx;
  height: 36rpx;
}

.form>.left>input {
  flex: 1;
  font-size: 32rpx;
  color: #666;
  margin: 0 20rpx;
}

.form>.left .placeholder {
  color: #CCCCCC;
}

.form>.sub {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #F3981C;
  width: 100rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  margin-top: 32rpx;
}

.hot {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin: 24rpx 0 30rpx 0;
  color: #666666;
}

.hot>.item {
  max-width: 240rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 20rpx;
  background: #F5F5F5;
  border-radius: 34rpx;
  border: 1rpx solid #F5F5F5;
  margin: 0 20rpx 28rpx 0;
}

.history {
  margin: 24rpx 0;
  color: #666666;
}

.history>.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 36rpx 0;
}

.history>.item>.label {
  width: 70%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.history>.item>.img {
  width: 30rpx;
  height: 30rpx;
}
