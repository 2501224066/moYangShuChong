.notice {
  padding: 0 32rpx;
}

.list>.item {
  display: flex;
  align-items: center;
  padding: 38rpx 0;
  border-bottom: 1rpx solid #E5E5E5;
}

.list>.item>.img {
  width: 88rpx;
  height: 88rpx;
  margin-right: 20rpx;
}

.list>.item>.content {
  flex: 1;
}

.list>.item>.content>.top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
}

.list>.item>.content>.top>.title {
  font-size: 36rpx;
  font-weight: 400;
  color: #333333;
  display: flex;
  align-items: center;
}


.list>.item>.content>.top>.title>span {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  background: #FF3333;
  border-radius: 50%;
  margin-left: 20rpx;
}

.list>.item>.content>.memo {
  width: 450rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.none {
  margin-top: 10vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.none>.img {
  width: 270rpx;
  height: 292rpx;
}
