.book-detail {
  padding-bottom: 34rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.top {
  flex-shrink: 0;
  height: 600rpx;
  padding: 208rpx 32rpx 0 32rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background: linear-gradient(134deg, #F7B52C 0%, #F3981C 100%);
}

.top>.img {
  width: 240rpx;
  height: 240rpx;
  flex-shrink: inherit;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background: #fff;
}

.top>.content {
  flex: 1;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.top>.content .name {
  font-size: 36rpx;
  font-weight: 600;
  margin-right: 60rpx;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}



.tab {
  flex-shrink: 0;
  width: 686rpx;
  margin: -70rpx 32rpx 0 32rpx;
  height: 140rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4px 10px rgba(0, 0, 0, .05);
}

.tab>view {
  width: 33.3%;
  line-height: 140rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #666666;
  text-align: center;
}

.container {
  overflow: auto;
}

.container>.title {
  padding: 0 32rpx;
  margin-top: 50rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.container>.title>.img {
  width: 48rpx;
  height: 48rpx;
  margin-right: 14rpx;
}

.container>.title span {
  font-size: 26rpx;
  color: #999;
  margin-left: 10rpx;
}

.container>.list {
  flex: 1;
  overflow: auto;
  padding: 26rpx 50rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #243241;
}

.container>.list>.item {
  display: flex;
  align-items: center;
  line-height: 100rpx;
}

.container>.list>.item>.name {
  margin-left: 20rpx;
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.active {
  color: #F3981C !important;
}

.container>.box {
  padding: 50rpx 32rpx
}

.container video {
  width: 686rpx;
  height: 386rpx;
  box-shadow: 0rpx 6rpx 20rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.none {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.none>.img {
  width: 270rpx;
  height: 292rpx;
}

.sharebox {
  display: flex;
}

.button_image {
  height: 40rpx;
  width: 40rpx;
  right: 40rpx;
  position: fixed;
}

.share {
  float: left;
  height: 40rpx;
  width: 40rpx;
  opacity: 0;
  left: -20rpx;
  background-color: transparent;
}

.follow {
  width: 116rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 34rpx;
  border: 1rpx solid #FFFFFF;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
}
